<?xml version="1.0" encoding="utf-8"?>
<!-- 私有的样式 -->
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!-- ******************************************************************************** 布局 ************************************************************************************ -->
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	
	
	<!-- 对话框 - 透明的（没有标题，没有边框） -->
	<style name="dialog_transparent" parent="@android:style/Theme.Dialog">
         <item name="android:windowFrame">@null</item>
         <item name="android:windowIsFloating">true</item>
         <item name="android:windowIsTranslucent">true</item>
         <item name="android:windowNoTitle">true</item>
         <item name="android:background">@color/base_transparent</item>
         <item name="android:windowBackground">@color/base_transparent</item>
         <item name="android:backgroundDimEnabled">true</item>
   </style>
    
    
    
    <!-- 正文 -->
    <style name="body" parent="@style/base_match_match_vertical">
        <item name="android:id">@id/layout_body</item>
        <item name="android:background">@color/body_backg</item>
    </style>
    
    <!-- 正文 - 内容 -->
    <style name="body_content" parent="@style/base_match_match_vertical">
        <item name="android:id">@id/layout_bodyContent</item>
    </style>
    
    <!-- 正文  - 内容 - 四边有内边距-->
    <style name="body_content_padding" parent="@style/body_content">
        <item name="android:padding">@dimen/base_padding_specialLarge</item>
    </style>
    
    <!-- 正文  - 内容 - 左右有内边距-->
    <style name="body_content_leftPadding" parent="@style/body_content">
        <item name="android:paddingLeft">@dimen/base_padding_specialLarge</item>
        <item name="android:paddingRight">@dimen/base_padding_specialLarge</item>
    </style>
    
    <!-- 正文  - 内容 - 上下有内边距-->
    <style name="body_content_topPadding" parent="@style/body_content">
        <item name="android:paddingTop">@dimen/base_padding_specialLarge</item>
        <item name="android:paddingBottom">@dimen/base_padding_specialLarge</item>
    </style>

    <!-- 列表项 -->
    <style name="listItem" parent="@style/base_match_wrap">
        <item name="android:paddingLeft">@dimen/base_padding_specialLarge</item>
        <item name="android:paddingTop">@dimen/base_padding_default</item>
        <item name="android:paddingRight">@dimen/base_padding_specialLarge</item>
        <item name="android:paddingBottom">@dimen/base_padding_default</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">@dimen/layout_listItem_minHeight</item>
    </style>

    <!-- 列表头和尾 -->
    <style name="listHeaderAndFooter" parent="@style/listItem">
        <item name="android:clickable">true</item>
    </style>
    
    
    
    
    <!-- ******************************************************************************** 列表 ************************************************************************************ -->
	<!-- 列表 -->
	<style name="list" parent="@style/base_match_wrap">
	    <item name="android:id">@android:id/list</item>
	    <item name="android:divider">@drawable/list_divider</item>
	    <item name="android:cacheColorHint">@color/base_transparent</item>
	    <item name="android:fastScrollEnabled">true</item>
	</style>
    
	<!-- 列表 - 充满的 -->
	<style name="list_match" parent="@style/list">
	    <item name="android:layout_height">match_parent</item>
	</style>
    
	<!-- 列表 - 高度权重1 -->
	<style name="list_weight" parent="@style/list">
	    <item name="android:layout_height">0dp</item>
	    <item name="android:layout_weight">1</item>
	</style>
	
	
	
	
	
	<!-- ******************************************************************************** 文本 ************************************************************************************ -->	
	<!-- 文本 -->
    <style name="text" parent="@style/base_wrap_wrap">
        <item name="android:textSize">@dimen/base_textSize_default</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:layout_marginLeft">@dimen/base_margin_littleSmall</item>
        <item name="android:layout_marginTop">@dimen/base_margin_specialSmall</item>
        <item name="android:layout_marginRight">@dimen/base_margin_littleSmall</item>
        <item name="android:layout_marginBottom">@dimen/base_margin_specialSmall</item>
    </style>

    <!-- 文本 - 充满 -->
    <style name="text_match" parent="@style/text">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- 文本 - 权重 -->
    <style name="text_weight" parent="@style/text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 文本 - 小的 -->
    <style name="text_small" parent="@style/text">
        <item name="android:textSize">@dimen/base_textSize_small</item>
    </style>

    <!-- 文本 - 小的 - 充满 -->
    <style name="text_small_match" parent="@style/text_small">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- 文本 - 小的 - 权重 -->
    <style name="text_small_weight" parent="@style/text_small">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 文本 - 标题 -->
    <style name="text_title" parent="@style/base_wrap_wrap">
        <item name="android:textSize">@dimen/base_textSize_large</item>
        <item name="android:textColor">@color/selector_text_title</item>
    </style>

    <!-- 文本 - 标题 - 充满 -->
    <style name="text_title_match" parent="@style/text_title">
        <item name="android:layout_width">match_parent</item>
    </style>

    <!-- 文本 - 标题 - 权重 -->
    <style name="text_title_weight" parent="@style/text_title">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 文本 - 副标题 -->
    <style name="text_subTitle" parent="@style/base_wrap_wrap">
        <item name="android:textSize">@dimen/base_textSize_littleSmall</item>
        <item name="android:textColor">@color/selector_text_subtitle</item>
    </style>
	
	<!-- 文本 - 滑动选项卡 - 标题 -->
	<style name="text_slideTabhost_tabtitle" parent="@style/base_weight_wrap">
	    <item name="android:textColor">@color/selector_slidetab_title</item>
	    <item name="android:gravity">center</item>
	    <item name="android:paddingLeft">@dimen/base_padding_default</item>
	    <item name="android:paddingTop">@dimen/base_padding_veryLarge</item>
	    <item name="android:paddingRight">@dimen/base_padding_default</item>
	    <item name="android:paddingBottom">@dimen/base_padding_veryLarge</item>
	    <item name="android:background">@drawable/selector_slidetab_title</item>
	</style>
	
	<!-- 文本 - 滑动选项卡 - 滑块 -->
	<style name="text_slideTabHost_slideBlock" parent="@style/base_weight_wrap">
	    <item name="android:background">@color/base_orange_dark</item>
	</style>
	
	
	
	
	
	<!-- ******************************************************************************** 按钮 ************************************************************************************ -->
	<!-- 按钮 - 正文 -->
	<style name="button" parent="@style/base_wrap_wrap">
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/base_gray</item>
	    <item name="android:minWidth">@dimen/button_minWidth</item>
	    <item name="android:minHeight">@dimen/button_minHeight</item>
	    <item name="android:layout_margin">@dimen/base_margin_littleSmall</item>
        <item name="android:padding">@dimen/base_padding_large</item>
	</style>
	
	<!-- 按钮 - 正文 - 宽度充满 -->
	<style name="button_match" parent="@style/button">
	    <item name="android:layout_width">match_parent</item>
	</style>
	
	<!-- 按钮 - 正文 - 宽度权重 -->
	<style name="button_weight" parent="@style/button">
	    <item name="android:layout_width">0dp</item>
	    <item name="android:layout_weight">1</item>
	</style>
	
    <!-- 按钮 - 列表项 -->
    <style name="button_listItem" parent="@style/base_wrap_wrap">
	    <item name="android:gravity">center</item>
	    <item name="android:textColor">@color/base_gray</item>
		<item name="android:minWidth">@dimen/button_listItem_minHeight</item>
		<item name="android:minHeight">@dimen/button_listItem_minHeight</item>
	    <item name="android:layout_margin">@dimen/base_margin_littleSmall</item>
	    <item name="android:padding">@dimen/base_padding_default</item>
		<item name="android:focusable">false</item>
		<item name="android:focusableInTouchMode">false</item>
    </style>
    
    <!-- 按钮 - 列表项中的选择按钮 -->
    <style name="button_listItem_choice" parent="@style/button_listItem">
		<item name="android:clickable">false</item>
        <item name="android:id">@id/button_listItemChoice</item>
    </style>
    
    
    
    
    
    <!-- ******************************************************************************** 编辑器 ************************************************************************************ -->
   <!-- 编辑器 -->
    <style name="edit" parent="@style/base_match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_height</item>
        <item name="android:background">@drawable/selector_edit</item>
        <item name="android:textSize">@dimen/base_textSize_default</item>
        <item name="android:textColor">@color/base_black</item>
        <item name="android:padding">@dimen/base_padding_large</item>
	    <item name="android:layout_margin">@dimen/base_margin_littleSmall</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawableRight">@drawable/icon_edit_clear</item>
    </style>
    
    <!-- 编辑器 - 账号 -->
    <style name="edit_account" parent="@style/edit">
        <item name="android:hint">@string/editHint_account</item>
    </style>
    
    <!-- 编辑器 - 密码 -->
    <style name="edit_password" parent="@style/edit">
        <item name="android:hint">@string/editHint_password</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <!-- 编辑器 - 确认密码 -->
    <style name="edit_confirmPassword" parent="@style/edit">
        <item name="android:hint">@string/editHint_confirmPassword</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
    <!-- 编辑器 - 姓名 -->
    <style name="edit_name" parent="@style/edit">
        <item name="android:hint">@string/editHint_name</item>
    </style>
    
    <!-- 编辑器 - 手机号 -->
    <style name="edit_mobileNumber" parent="@style/edit">
        <item name="android:hint">@string/editHint_mobileNumber</item>
        <item name="android:maxLength">11</item>
        <item name="android:inputType">phone</item>
    </style>
    
    <!-- 编辑器 - 验证码 -->
    <style name="edit_verifyCode" parent="@style/edit">
        <item name="android:hint">@string/editHint_verifyCode</item>
        <item name="android:maxLength">6</item>
        <item name="android:inputType">number</item>
    </style>
    
    <!-- 编辑器 - 邮箱 -->
    <style name="edit_email" parent="@style/edit">
        <item name="android:hint">@string/editHint_email</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    
    <!-- 编辑器 - 地区 -->
    <style name="edit_area" parent="@style/edit">
        <item name="android:hint">@string/editHint_area</item>
    </style>
    
    <!-- 编辑器 - 地址 -->
    <style name="edit_address" parent="@style/edit">
        <item name="android:hint">@string/editHint_address</item>
    </style>
    
    <!-- 编辑器 - 邮编 -->
    <style name="edit_zipcode" parent="@style/edit">
        <item name="android:hint">@string/editHint_zipcode</item>
        <item name="android:maxLength">6</item>
        <item name="android:inputType">number</item>
    </style>
    
    <!-- 编辑器 - 公司名称 -->
    <style name="edit_companyName" parent="@style/edit">
        <item name="android:hint">@string/editHint_companyName</item>
    </style>
    
    <!-- 编辑器 - 身份证号 -->
    <style name="edit_idNumber" parent="@style/edit">
        <item name="android:hint">@string/editHint_idNumber</item>
        <item name="android:maxLength">18</item>
    </style>
    
    
	
    <!-- ******************************************************************************** 其它 ************************************************************************************ -->
    <style name="preference_complete">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:background">@drawable/selector_preference_complete</item>
        <item name="android:clickable">true</item>
    </style>
    
    <style name="preference_header" parent="@style/preference_complete">
        <item name="android:background">@drawable/selector_preference_header</item>
    </style>
    
    <style name="preference_center" parent="@style/preference_complete">
        <item name="android:background">@drawable/selector_preference_center</item>
    </style>
    
    <style name="preference_footer" parent="@style/preference_complete">
        <item name="android:background">@drawable/selector_preference_footer</item>
    </style>
</resources>