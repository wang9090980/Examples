<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" style="@style/body" xmlns:app="http://schemas.android.com/apk/res/me.xiaopan.examples.android">
    <ScrollView style="@style/base_match_match">
        <LinearLayout style="@style/body_content_topPadding">
            <me.xiaopan.examples.android.widget.Preference style="@style/preference_complete" android:id="@+id/preference_slidingToggle" app:title="允许推送" app:type="toggle"/>
            
            <include layout="@layout/include_spacing_vertical"/>
            <include layout="@layout/include_spacing_vertical"/>
            
            <me.xiaopan.examples.android.widget.Preference style="@style/preference_header" android:id="@+id/preference_slidingToggle1" app:checked="true" app:title="推送每日要闻" app:type="toggle"/>
            <me.xiaopan.examples.android.widget.Preference style="@style/preference_center" android:id="@+id/preference_slidingToggle2" app:title="推送离线消息" app:type="toggle"/>
            <me.xiaopan.examples.android.widget.Preference style="@style/preference_center" android:id="@+id/preference_slidingToggle3" app:checked="true" app:title="推送广告" app:type="toggle"/>
            <me.xiaopan.examples.android.widget.Preference style="@style/preference_footer" android:id="@+id/preference_slidingToggle4" app:title="推送天气预报" app:type="toggle"/>
        </LinearLayout>
    </ScrollView>
    
    <include layout="@layout/include_shadow_down"/>
</FrameLayout>